{
    "name": "yrbane/lunar-cli",
    "description": "Framework CLI PHP autonome avec commandes, helpers console et rendu de tableaux",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "seb",
            "email": "seb@nethttp.net"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Lunar\\Cli\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lunar\\Cli\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/lunar"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
